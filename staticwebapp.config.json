{
    "navigationFallback": {
      "rewrite": "/index.html",
      "exclude": ["/images/*", "/*.{png,jpg,gif,svg,ico}", "/*.{css,scss,js,json}"]
    },
    "routes": [
      {
        "route": "/api/*",
        "methods": ["GET", "POST", "PUT", "DELETE"],
        "rewrite": "/api/index"
      }
    ],
    "platform": {
      "apiRuntime": "node:18"
    },
    "globalHeaders": {
      "content-security-policy": "default-src 'self' 'unsafe-inline' 'unsafe-eval'; img-src 'self' blob: data:; connect-src 'self' https://*.openai.com https://*.mongodb.com;",
      "X-Content-Type-Options": "nosniff",
      "X-Frame-Options": "DENY"
    }
  }